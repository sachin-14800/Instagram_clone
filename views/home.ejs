<link rel="stylesheet" href="/css/home.css">
<h1>Welcome !!! Hope you doing good.</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user) {%>
        <form action="/post/create"id="new-post-form" method="POST">
            <textarea name="content"  cols="30" rows="10" placeholder="Enter your content to be posted"></textarea>
            <input type="submit">
        </form>
        <% } %>
        <div id="post-list-container">
            <ul>
                <% for(p of post){%>
                    <li><%= p.content %></li>
                    <li><%= p.user.name %></li>
                    <div class="post-comments">
                        <ul>
                        <% for(comment of p.comments){%>
                            <li><%= comment.content %></li>
                            <li><%= comment.user.name %></li>
                            <%}%>
                        </ul>
                        <% if(locals.user){%>
                            <form action="/comment/create" method="POST">
                                <input type="text" name="content" placeholder="Type here...">
                                <!-- important to recognise on which post the comment is added -->
                                <input type="hidden" name="post" value="<%= p._id%>">
                                <input type="submit" value="Add comment">
                            </form>
                            <%}%>
                    </div>
                <%}%>
            </ul>
        </div>
</section>